import java.util.Scanner;

public class main {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        int idade;

        System.out.println("Insira a idade: ");
        idade = scan.nextInt();

        if (idade >= 0 && idade < 12) {
            System.out.println("Criança.");
        }
        if (idade >= 12 && idade < 18) {
            System.out.println("Adolescente.");
        }
        if (idade >= 18 && idade < 60) {
            System.out.println("Adulto.");
        }
        if (idade >= 60) {
            System.out.println("Idoso.");
        }

//exercicio 2

        int valor = 0;
        for (int i = 0; i <= 100; i++) {
            System.out.println("------Laço-------" + i + "-----------");
            System.out.println("Valor inicial: " + valor);
            valor = valor + i;
            System.out.println("Novo valor: " + valor + i);

        }

    }
public class sla {
    public static void main(String[] args) {
        int i = 1;

        while(i<=10){
            i = i + 1;
            System.out.println("Laço: "+ i);
        }
    }
}
public class Procedimentos{
    public static void main(String[] args) {
        String msg = "Boa noite!";
        mensagem("Olá alunos de programação");
        mensagem("bom dia alunos");
        mensagem(msg);
    }
    public static void mensagem(String frase){
        System.out.println("--------------");
        System.out.println(frase);
        System.out.println("--------------");
    }
}




import java.util.Scanner;
//faixa etária
public class main {
    public static void main(String[] args){
        Scanner scan = new Scanner(System.in);
        int idade;

        System.out.println("Insira a idade: ");
        idade = scan.nextInt();

        if(idade>=0 && idade<12){
            System.out.println("Criança.");
        }
        if(idade>=12 && idade<18){
            System.out.println("Adolescente.");
        }
        if(idade>=18 && idade <60){
            System.out.println("Adulto.");
        }
        if(idade>=60){
            System.out.println("Idoso.");
        }
    }
}




import java.util.Scanner;
public class ex1 {



    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        int resultado = 0;

        System.out.println("Digite um valor: ");
        int valor1 = scan.nextInt();
        System.out.println("Digite outro valor: ");
        int valor2 = scan.nextInt();
        
        resultado = Somador(valor1,valor2);

        System.out.println("A soma dos valores é: "+ resultado);
    }   

    public static int Somador(int a, int b){
        int resultado = a + b;
        return resultado;
    }
}




//Crie um algoritmo que receba, no programa principal, os coeficientes a, b e c de uma equação do
//segundo grau e utiliza uma sub-rotina para calcular as raizes x1 e x2 desta equação. O resultado
//deve ser atribuido em uma variável pelo programa principal.
import java.util.Scanner;
public class ex2 {
    public static void main(String[] args) {
        int a1, b2, c3, resultado;
        Scanner scan = new Scanner(System.in);

        System.out.println("Digite o coeficiente A da função: ");
        a1 = scan.nextInt();
        System.out.println("Digite o coeficiente B da função: ");
        b2 = scan.nextInt();
        System.out.println("Digite o coeficiente C da função: ");
        c3 = scan.nextInt();


    }


    public static int CalcularBhaskara(int a,int b,int c){
        int delta = (b * b) - (4ac);

        if(delta < 0){
            System.out.println("Não existem raízes reais.");

        }
        double raizdelta = Math.sqrt(delta);
        double x1 = (-b + raizdelta) / (2a);
        double x2 = (-b - raizdelta) / (2a);

        return new resultado(x1,x2);

    }

}
