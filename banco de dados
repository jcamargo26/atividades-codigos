CREATE TABLE FONEPESSOA(
idPessoa NUMBER(4) NOT NULL,
DDD VARCHAR2(2)NOT NULL,
Prefixo VARCHAR2(4) NOT NULL,
Numero VARCHAR2(4) NOT NULL,
CONSTRAINT PK_DDD PRIMARY KEY(DDD,idPessoa,Prefixo, Numero)

);

SELECT*FROM FONEPESSOA;

CREATE TABLE ESTUDANTE (
idEstudante NUMBER(4) NOT NULL,
email VARCHAR2(40) NOT NULL,
idPessoa NUMBER(4) NOT NULL,
idRep NUMBER(4) NOT NULL,
CONSTRAINT PK_ESTUDANTE PRIMARY KEY(idEstudante)
);
SELECT*FROM ESTUDANTE;

ALTER TABLE ESTUDANTE ADD CONSTRAINT FK_PESSOA_ESTUDANTE FOREIGN KEY(idPessoa) REFERENCES PESSOA(idPessoa);

ALTER TABLE ESTUDANTE ADD CONSTRAINT FK_REP_ESTUDANTE FOREIGN KEY(idRep) REFERENCES REPUBLICA(idRep);

CREATE TABLE REPUBLICA (
idRep NUMBER(4)NOT NULL,
Nome VARCHAR2(40) NOT NULL,
Endereco VARCHAR2(40) NOT NULL,
CONSTRAINT PK_REP PRIMARY KEY(idRep)
);


